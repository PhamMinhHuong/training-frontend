mixin breadcrumb(names, hrefs)
  ol.breadcrumb.breadcrumb-nav
    each name, index in names
      if (index == names.length - 1)
        
        li.breadcrumb-item.breadcrumb-nav__item.active #{name}
      
      else
        
        li.breadcrumb-item.breadcrumb-nav__item
          a.breadcrumb-nav__link(href= `${hrefs[index]}.html` ? `${hrefs[index]}.html` : "#") #{name} 
