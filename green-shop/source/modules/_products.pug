mixin products({image, name, href, oldPrice, newPrice, description, sale, isNew, size, custom})
  .product(
      class= size ? `product--${size}` : null
      class= custom ? `${custom}` : null
      )
    .product__image-wrapper
      a(href= href ? href : '#')
        img.product__image.img-fluid(src=`../images/${image}`, alt="")
      .product__overlay
        .product__actions
          +buttons({
            text: "MUA NGAY",
            btnClass: 'product__buy btn-primary--green'
          })
          +buttons-link({
            btnClass: 'product__search',
            iconClass: 'product__icon',
            iconFont: 'fas fa-search',
            iconSize: 'md',
            iconColor: 'black'
          })
          +buttons({
            btnClass: 'product__like',
            iconClass: 'product__icon',
            iconFont: 'fas fa-heart',
            iconSize: 'md',
            iconColor: 'black'
          })
      if (sale !== '' && sale !== undefined)
        p.product__status.product__status--sale -#{sale}%
      if (isNew == true) 
        p.product__status.product__status--new New
    .product__info
      a.product__name(href= href ? href : '#') #{name}
      .product__stars
        i.fas.fa-star.product__star
        i.fas.fa-star.product__star
        i.fas.fa-star.product__star
        i.fas.fa-star.product__star
        i.fas.fa-star-half-alt.product__star
      if (description !== '' && description !== undefined)
        p.product__description #{description}
      p.product__price #{newPrice} đ
        span.product__old-price #{oldPrice} đ
