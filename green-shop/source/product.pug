  block main
    .main
      .product-list
        .product-list__wrapper.row
          +breadcrumb(
          ['Home', 'Danh sách sản phẩm'],
          ['home', 'product'])
          .product-list__sidebar.sidebar.sidebar-left.col-12.col-md-3
            include layout/_product-sidebar
          .product-list__content.col-12.col-md-9
            .product-list__banner.banner
              a.banner__image-wrapper(href="")
                img.banner__image(src="../images/banner01.png")
            .product-list__sort.product-sort
              .product-sort__grid
                +buttons({
                  btnClass: 'product-sort__btn product-sort__grid-btn active',
                  iconFont: 'fas fa-th',
                  iconSize: 'md',
                  iconColor: 'gray',
                  iconClass: 'product-sort__icon'
                })
                +buttons({
                  btnClass: 'product-sort__btn product-sort__list-btn',
                  iconFont: 'fas fa-th-list',
                  iconSize: 'md',
                  iconColor: 'gray',
                  iconClass: 'product-sort__icon'
                })
              form.product-sort__option.sort-option.form-inline
                label.sort-option__label(for="product-name") Sắp xếp theo
                select.sort-option__select#product-name
                  option Tên sản phẩm
                  option Giá sản phẩm
                label.sort-option__label(for="product-count") Show
