extends layout/_default

block head
  +head('Green Shop | Liên hệ')

block body
  block header
    include layout/_header
  block main
    .main
      .contact
        .contact__wrapper.row
          +breadcrumb(
          ['Home', 'Liên hệ'],
          ['home', 'contact'])
      .contact-map
        img.img-fluid(src="../images/map.png", alt="")
      .contact
        .contact__wrapper.row
          .col-12.col-md-6
            h3.title.title--normal Thông tin liên hệ
            form.contact-form
              .form-group.contact-form__group
                label.contact-form__label(for="contact-name") Họ và tên
                input.form-control.contact-form__input#contact-email(type="text")
              .form-group.contact-form__group
                label.contact-form__label(for="contact-email") Địa chỉ email
                input.form-control.contact-form__input#contact-email(type="password")
              .form-group.contact-form__group
                label.contact-form__label(for="contact-phone") Số ĐT
                input.form-control.contact-form__input#contact-phone(type="text")
              .form-group.contact-form__group
                label.contact-form__label(for="contact-comment") Bình luận
                textarea.form-control.contact-form__textarea#contact-comment(type="password")

          .col-12.col-md-6.contact-info
            a.contact-info__image-wrapper(href="#")
              img.contact-info__image(src="../images/logo-footer.png", alt="")
            p.contact-info__text DKT được thành lập với niềm đam mê và khát vọng thành công trong lĩnh vực Thương mại điện tử.Chúng tôi đã và đang khẳng định được vị trí hàng đầu bằng những sản phẩm
            ul.contact-info__contact
              li.contact-info__item
                +icons({
                  iconClass: 'contact-info__icon',
                  iconFont: 'fas fa-mobile-alt',
                  iconSize: 'sm',
                  iconColor: 'green'})
                p Điện thoại : (84-4) 66.558.868
              li.contact-info__item
                +icons({
                  iconClass: 'contact-info__icon',
                  iconFont: 'fas fa-envelope',
                  iconSize: 'sm',
                  iconColor: 'green'})
                p Email : info@dkt.com.vn
  block footer
    include layout/_footer
